{
  "sourcePath": "src",
  "destPath": "dist",
  "assetsTemplate": "assets/[hash].[ext]",
  "entryCSS": "index.css",
  "entryJS": "index.js",
  "entryHTML": "index.html",
  "customWatch": false,
  "browsersync": {
    "port": 3000,
    "notify": false,
    "server": {
      "baseDir": "./"
    }
  },
  "notify": {
    "onError": false,
    "onUpdated": false
  },
  "browserify": {
    "watchify": {
      "delay": 100,
      "ignoreWatch": [
        "**/node_modules/**"
      ],
      "poll": false
    },
    "sourcemap": true,
    "uglify": false,
    "extend": null,
    "options": {}
  },
  "postcss": {
    "sourcemap": true,
    "plugins": null,
    "options": {}
  }
}
